<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Refine">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
  <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/appbarlayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/refine_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


  </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="8dp"
        android:paddingTop="15dp">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         android:layout_marginTop="2dp"
          android:text="Select Your Availability"
          android:textSize="18dp"

          android:layout_marginBottom="10dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"

          />

      <androidx.coordinatorlayout.widget.CoordinatorLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"

            android:hint="@string/dropdownname">

          <AutoCompleteTextView
              android:id="@+id/auto_complte_txt"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"

              android:inputType="none" />


        </com.google.android.material.textfield.TextInputLayout>

      </androidx.coordinatorlayout.widget.CoordinatorLayout>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:text="Add your Status"
          android:textSize="18dp" />

      <com.google.android.material.textfield.TextInputLayout
          style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Hi Community! I am open to new Coonections">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:lines="4"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:scrollHorizontally="false" />
      </com.google.android.material.textfield.TextInputLayout>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:text="Select Hyper Local Distance"
          android:textSize="18dp" />


      <com.google.android.material.slider.Slider
          android:layout_marginTop="15dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="15dp"
          />
      <View
          android:background="#606060"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          />



      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Select Purpose"
          android:textSize="18dp" />




      
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginBottom="15dp"
         android:layout_marginTop="15dp">
       <CheckBox
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Coffee"
           android:textSize="15dp"
           android:button="@null"
           android:drawablePadding="8dp"
           android:layout_marginEnd="15dp"
           android:paddingStart="15dp"
           android:paddingEnd="15dp"
           android:background="@drawable/custom_button"/>

       <CheckBox
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Bussiness"
           android:textSize="15dp"
           android:button="@null"
           android:drawablePadding="8dp"
           android:paddingStart="15dp"
           android:paddingEnd="15dp"
           android:layout_marginEnd="15dp"
           android:background="@drawable/custom_button"/>

       <CheckBox
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Hobbies"
           android:textSize="15dp"
           android:button="@null"
           android:drawablePadding="8dp"
           android:paddingStart="15dp"
           android:paddingEnd="15dp"
           android:layout_marginEnd="15dp"
           android:background="@drawable/custom_button"/>



     </LinearLayout>



      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginBottom="15dp">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friendship"
            android:textSize="15dp"
            android:button="@null"
            android:drawablePadding="8dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/custom_button"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movies"
            android:textSize="15dp"
            android:button="@null"
            android:drawablePadding="8dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/custom_button"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dinning"
            android:textSize="15dp"
            android:button="@null"
            android:drawablePadding="8dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/custom_button"/>




      </LinearLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginBottom="15dp">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dating"
            android:textSize="15dp"
            android:button="@null"
            android:drawablePadding="8dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/custom_button"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="matimony"
            android:textSize="15dp"
            android:button="@null"
            android:drawablePadding="8dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/custom_button"/>


      </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save and Explore"
            android:background="@drawable/custom_save_button"
            android:layout_gravity="center"
            android:gravity="center"/>




    </LinearLayout>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>