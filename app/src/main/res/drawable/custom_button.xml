<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="15dp" /> <!-- Adjust the radius as needed -->
            <solid android:color="@color/indigo" /> <!-- Define your selected color -->
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="15dp" /> <!-- Adjust the radius as needed -->
            <solid android:color="@android:color/transparent" /> <!-- Transparent for unchecked state -->
            <stroke android:color="@color/white" android:width="1dp"/> <!-- Define your stroke color and width -->
        </shape>
    </item>
</selector>